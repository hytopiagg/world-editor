{
    "name": "hytopia-world-editor",
    "version": "0.1.0",
    "private": true,
    "description": "HYTOPIA World Editor desktop app (Electron wrapper).",
    "author": "HYTOPIA <support@hytopia.com>",
    "homepage": "https://build.hytopia.com/",
    "productName": "HYTOPIA World Editor",
    "repository": {
        "type": "git",
        "url": "https://github.com/hytopiagg/desktop-releases"
    },
    "dependencies": {
        "@adobe/react-spectrum": "^3.41.0",
        "@hcaptcha/react-hcaptcha": "^1.12.0",
        "@react-three/drei": "^9.121.4",
        "@react-three/fiber": "^8.17.14",
        "@types/jszip": "^3.4.0",
        "@types/react": "^19.1.2",
        "@types/react-dom": "^19.1.2",
        "clsx": "^2.1.1",
        "file-saver": "^2.0.5",
        "jszip": "^3.10.1",
        "pako": "^2.1.0",
        "perlin-noise": "^0.0.1",
        "prismarine-nbt": "^2.7.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-icons": "^5.4.0",
        "react-scripts": "^5.0.1",
        "sharp": "^0.34.1",
        "three": "^0.160.0",
        "@dimforge/rapier3d-simd-compat": "^0.18.1",
        "typescript": "^5.8.3",
        "update-electron-app": "^3.1.1",
        "@xhayper/discord-rpc": "1.3.0"
    },
    "scripts": {
        "dev": "react-scripts start",
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "prebuild": "node scripts/generate-model-manifest.js",
        "prestart": "node scripts/generate-model-manifest.js",
        "parse:bp": "node scripts/parse-axiom-bp.js",
        "convert:bp": "node scripts/convert-axiom-bp-to-editor.js",
        "clean:dist": "rimraf dist",
        "build:electron": "node scripts/generate-model-manifest.js && cross-env PUBLIC_URL=./ GENERATE_SOURCEMAP=false react-scripts build",
        "electron:dev": "concurrently -k -r \"cross-env BROWSER=none react-scripts start\" \"wait-on tcp:3000 && electron .\"",
        "electron:pack": "npm run build:electron && electron-builder --dir",
        "electron:dist": "npm run clean:dist && npm run build:electron && electron-builder",
        "electron:dist:mac": "npm run clean:dist && npm run build:electron && electron-builder --mac dmg zip universal",
        "electron": "node -e \"process.exit(process.platform==='darwin'?0:1)\" && npm run electron:dist:mac || npm run electron:dist"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
        "@types/three": "^0.176.0",
        "autoprefixer": "^10.4.21",
        "eslint": "^8",
        "postcss": "^8.5.6",
        "tailwindcss": "^3.4.17",
        "concurrently": "^9.1.0",
        "cross-env": "^7.0.3",
        "rimraf": "^5.0.5",
        "electron": "^31.3.1",
        "electron-builder": "^25.1.8",
        "electron-is-dev": "^3.0.1",
        "wait-on": "^7.2.0"
    },
    "main": "electron/main.js",
    "build": {
        "appId": "com.hytopia.worldeditor",
        "artifactName": "Hytopia-World-Editor-${os}-${arch}.${ext}",
        "extraMetadata": {
            "main": "electron/main.js"
        },
        "files": [
            "build/**/*",
            "!build/**/*.map",
            "electron/**/*"
        ],
        "asar": true,
        "compression": "maximum",
        "mac": {
            "target": [
                "dmg",
                "zip"
            ],
            "category": "public.app-category.graphics-design",
            "icon": "public/assets/icons/Generated Image September 04, 2025 - 9_56PM.icns"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                },
                {
                    "target": "zip",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ],
            "icon": "public/assets/icons/Generated Image September 04, 2025 - 9_56PM.ico"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Graphics",
            "icon": "public/assets/icons/Generated Image September 04, 2025 - 9_56PM.png"
        },
        "dmg": {
            "background": "public/assets/branding/Generated Image September 04, 2025 - 9_56PM.jpeg"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "public/assets/icons/Generated Image September 04, 2025 - 9_56PM.ico",
            "uninstallerIcon": "public/assets/icons/Generated Image September 04, 2025 - 9_56PM.ico"
        },
        "publish": [
            {
                "provider": "github",
                "owner": "hytopiagg",
                "repo": "desktop-releases"
            }
        ]
    }
}
